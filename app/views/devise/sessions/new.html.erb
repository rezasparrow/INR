  <!-- fieldsets -->
  
  <fieldset style="margin-top:45%;margin-bottom:20%;position:inherit;">
    <h2 class="fs-title">ورود به سایت</h2>
    <h3 class="fs-subtitle"></h3>
    
    <%= f.text_field :email, autofocus: true , placeholder:"ایمیل" ,class: "input-type" , style: "direction:rtl;" %>
<!--     <input type="text" name="email" placeholder="Email" /> -->


<!--    <input type="password" name="pass" placeholder="Password" />  -->
   <%= f.password_field :password, autocomplete: "off" ,placeholder:"رمز عبور" ,class: "input-type" , style: "direction:rtl;"%> 

<!--    <input type="password" name="cpass" placeholder="Confirm Password" />  -->

      <div class="form-actions" style="col-md-12">
        <div>
          <% if devise_mapping.rememberable? -%>
                
                مرا به خاطر بسپار <%= f.check_box :remember_me , :value => "1" ,style:""%>
            <% end -%>
        </div>

      <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <div class="forget-password">
          <h4>آیا رمز عبور خود را فراموش کرده اید؟</h4> 
          <p>
             نگران نباشید, روی
              <%= link_to "اینجا", new_password_path(resource_name) ,style:"color:blue;"%><br />
            کلیک کنید تا رمز جدید به شما داده شود!
          </p>
        </div>
      <% end -%>
      </div>



