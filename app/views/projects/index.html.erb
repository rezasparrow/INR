                  </th>
                 
                </tr>
                </thead>
                <tbody>
                <tr>
                <% @projects.each do |project| %>
                <tr>
                <th ><%= project.name %></td>
                <th ><%= project.start_time %></td>
                <th ><%= project.end_time %></td>
                <th ><%= image_tag project.avatar.url , style:"width:16%;height:26%;"%></td>
