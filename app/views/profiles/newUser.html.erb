<html>
<head>
  <meta charset="UTF-8">
  <title> sign up </title>
  <link rel="stylesheet" href="/assets/sign_up.css" />
  <script src="/assets/sign_up.js" type="text/javascript"></script>


</head>
<body>
<!-- multistep form -->
<!-- <form id="mmsform">  -->
<%= form_for(@user  , url: addUser_profiles_path ,:html => {:class => "mmsform"}) do |f| %>
  <!-- progressbar -->
  <!-- <ul id="progressbar">
    <li class="active">Account Setup</li>
    <li>Social Profiles</li>
    <li>Personal Details</li>
  </ul> -->
  <!-- fieldsets -->
  </br></br>
  <fieldset style="margin-top:-4%;margin-bottom:20%;position:inherit;width:95%;margin-left: 0%;">
    <h2 class="fs-title" style="font-size:28px;color:#2DB36A;">فرم ثبت نام</h2>
    <h3 class="fs-subtitle"></h3>
    <%= f.email_field :email, autofocus: true , placeholder:"ایمیل" ,class: "input-type" , style: "direction:rtl;" %>
<!--     <input type="text" name="email" placeholder="Email" /> -->
    <%= f.text_field :name , class: "input-type"  ,placeholder:"نام و نام خانوادگی" ,style: "direction:rtl;" %>

<!--    <input type="password" name="pass" placeholder="Password" />  -->
   <%= f.password_field :password, autocomplete: "off" ,placeholder:"رمز عبور" ,class: "input-type" , style: "direction:rtl;"%> 

<!--    <input type="password" name="cpass" placeholder="Confirm Password" />  -->
  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:" تکرار رمز عبور" ,class: "input-type" , style: "direction:rtl;"%>

 
     <%= f.text_field :company_name , class: "input-type"  ,placeholder:"آدرس" ,style: "direction:rtl;" %>
 

     <%= f.text_field :tel , class: "input-type"  ,placeholder:"شماره تلفن",style: "direction:rtl;" %>


  <label class="control-label" >عکس</label>
     <%= f.file_field :avatar ,class: "input-type" ,style: "direction:rtl;" %>
 
    <% if current_user.role == "ادمین" %>
    <div class="field">
    <%#= f.label :role %>
    <%= f.label :role, "منشی", :value => "منشی" %>
    <%= f.radio_button :role, "منشی" %>
    <%= f.label :role, "بیمار", :value => "بیمار" %>
    <%= f.radio_button :role, "بیمار" %>
    <%= f.label :role, "پزشک", :value => "پزشک" %>
    <%= f.radio_button :role, "پزشک", :checked => true %>
    </div>
    <% end %>
 
 <% if current_user.role == "پزشک" %>
     <div class="field">
    <%#= f.label :role %><br />
    <%= f.label :role, "منشی", :value => "منشی" %>
    <%= f.radio_button :role, "منشی" %>
    <%= f.label :role, "بیمار", :value => "بیمار" %>
    <%= f.radio_button :role, "بیمار" , :checked => true %>
    </div>
    <% end %>

     <% if current_user.role == "پزشک" %>
   <div class="field">
    <%#= f.label :inclinic %>
    <%= f.label :inclinic, "بیمار خارج از مطب", :value => "بیمار خارج از مطب" %>
    <%= f.radio_button :inclinic, "بیمار خارج از مطب" %>
    <%= f.label :inclinic, "بیمار داخل مطب", :value => "بیمار داخل مطب" %>
    <%= f.radio_button :inclinic, "بیمار داخل مطب"%>
  </div>
  <% end %>
 
 <!-- <input type="button" name="next" class="next action-button" value="Next" />  -->
<!--    <div class="action-button input-type"> -->
    <%= f.submit "ذخیره"  , class: "action-button input-type"%>
    
 <!--  </div> -->


  </fieldset>



<!--  </form> --> 
<%end%>
<!-- jQuery -->
<script src="http://thecodeplayer.com/uploads/js/jquery-1.9.1.min.js" type="text/javascript"></script>
<!-- jQuery easing plugin -->
<script src="http://thecodeplayer.com/uploads/js/jquery.easing.min.js" type="text/javascript"></script>

</body>
</html>

